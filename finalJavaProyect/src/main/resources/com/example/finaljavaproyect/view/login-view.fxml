<VBox alignment="CENTER" prefHeight="688.0" prefWidth="1165.0" spacing="90.0" styleClass="background" stylesheets="@../style/loginStyle.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finaljavaproyect.controller.HelloController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="50.0" />
   </padding>
   <children>
      <VBox fx:id="cont" alignment="TOP_CENTER" prefHeight="478.0" prefWidth="783.0">
         <children>
            <ImageView fitHeight="174.0" fitWidth="315.0" pickOnBounds="true">
               <image>
                  <Image url="@../images/marketcolLogo.png" />
               </image>
            </ImageView>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="INICIAR SESIÓN">
               <font>
                  <Font name="Ebrima" size="64.0" />
               </font>
            </Text>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
               <VBox.margin>
                  <Insets bottom="90.0" left="350.0" right="350.0" top="50.0" />
               </VBox.margin>
               <children>
                  <TextField maxWidth="300.0" minWidth="200.0" prefHeight="25.0" prefWidth="356.0" promptText="Correo Electronico">
